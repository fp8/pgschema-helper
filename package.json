{
  "name": "pgschema-helper",
  "version": "0.1.0",
  "description": "Parse a schema file generated by pgdump and break it down to individual files",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "marcos.lin@farport.co",
  "license": "MIT",
  "private": false,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "yarn lint:ts && yarn build:ts && yarn gendoc",
    "build:ts": "tsc --project src/tsconfig.json",
    "gendoc": "OUTPUTDIR=build/docs && mkdir -p $OUTPUTDIR && typedoc --readme none --excludePrivate --tsconfig src/tsconfig.json --out $OUTPUTDIR src/index.ts",
    "clean": "rm -rf lib && rm -rf output",
    "start": "ts-node --project src/tsconfig.json src/index.ts",
    "lint:ts": "eslint src --ext .ts,.tsx",
    "lint": "yarn lint:ts",
    "test:unit": "ts-mocha --project test/tsconfig.json -r tsconfig-paths/register 'test/*.spec.ts' 'test/**/*.spec.ts'",
    "test": "yarn clean && yarn test:unit"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/chai-as-promised": "^7.1.8",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.6",
    "@types/sinon": "^17.0.2",
    "@types/sinon-chai": "^3.2.12",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "chai": "^4.3.8",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.56.0",
    "mocha": "^10.2.0",
    "sinon": "^17.0.1",
    "sinon-chai": "^3.7.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typedoc": "^0.25.8",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@fp8/simple-config": "^0.5.1",
    "jlog-facade": "^0.8.0"
  }
}
